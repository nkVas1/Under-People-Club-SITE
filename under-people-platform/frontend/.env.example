# Frontend Environment Configuration
# Copy to .env.local and update values

# ============================================================
# URL Configuration
# ============================================================

# App URL (used for dynamic config, optional)
# Auto-detected from NEXT_PUBLIC_VERCEL_URL or localhost:3000
NEXT_PUBLIC_APP_URL=

# Vercel deployment URL (auto-set by Vercel)
# NEXT_PUBLIC_VERCEL_URL=under-people-platform.vercel.app

# ============================================================
# Backend API Integration (CRITICAL!)
# ============================================================
# Backend URL where your Python bot is hosted (Railway, Docker, etc.)
# This is the MOST IMPORTANT variable!
# 
# Development:  http://localhost:8000
# Railway:      https://your-railway-app.up.railway.app
# Docker:       http://backend:8000
#
# Get this URL from:
# 1. Railway Dashboard -> Your Project -> Settings -> Domain
# 2. Docker Compose -> backend service hostname
# 3. Local dev -> usually http://localhost:8000
#
NEXT_PUBLIC_API_URL=upcworldbot-production.up.railway.app

# ============================================================
# Telegram Integration
# ============================================================

# Bot token for checkout integration
# NEXT_PUBLIC_BOT_TOKEN=your_bot_token_here

# Bot username (for login widget and checkout)
NEXT_PUBLIC_BOT_NAME=UPCworld_bot

# ============================================================
# Optional: Vercel Analytics
# ============================================================
# NEXT_PUBLIC_VERCEL_ANALYTICS_ID=

# ============================================================
# Vercel Production Configuration
# ============================================================

# App URL (set explicitly in Vercel Dashboard)
NEXT_PUBLIC_APP_URL=https://under-people-club.vercel.app

# ============================================================
# Feature Flags
# ============================================================

# Enable Telegram payment flow
NEXT_PUBLIC_ENABLE_TELEGRAM_PAYMENT=true

# Debug mode (verbose logging)
NEXT_PUBLIC_DEBUG_MODE=false

# ============================================================
# Optional: Custom Configuration
# ============================================================

# Site URL (deprecated, use NEXT_PUBLIC_APP_URL instead)
# NEXT_PUBLIC_SITE_URL=http://localhost:3000
