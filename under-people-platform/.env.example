# ===========================================
# Under People Club - Global Environment
# ===========================================
# Копируй этот файл в .env и заполни значения

# ===== Frontend (.env.local) =====
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_BOT_NAME=under_people_bot
NEXT_PUBLIC_APP_ID=1234567890

# ===== Backend (.env) =====
# Database
DATABASE_URL=postgresql://underpeople:password@db:5432/underpeople_db
REDIS_URL=redis://redis:6379/0

# Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_BOT_USERNAME=under_people_bot
TELEGRAM_WEBHOOK_URL=https://api.underpeople.club/webhook

# Security
SECRET_KEY=your_secret_key_here_change_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000,https://underpeople.club

# Environment
ENVIRONMENT=development
DEBUG=true

# ===== Docker Compose =====
POSTGRES_USER=underpeople
POSTGRES_PASSWORD=password
POSTGRES_DB=underpeople_db
